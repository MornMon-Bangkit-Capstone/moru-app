<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moru" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="fontFamily">@font/poppinsregular</item>
    </style>

    <style name="ImageView.Round" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="textStyleSemiBold">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="textStyleMedium">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="buttonTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="tabTextStyle">
        <item name="fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:textColor">@color/orange</item>
    </style>


    <style name="BottomNavigationLabelStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.Moru.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Moru.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Moru.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppinsmedium</item>
    </style>
</resources>